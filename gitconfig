[user]
  name = Alessio Rocco
  email = alessio.rocco.lt@gmail.com
[core]
  excludesfile = ~/.gitignore
[gitsh]
  gitcommand = hub
[commit]
  template = ~/.gitmessage
[push]
  default = current
[merge]
  ff = only
[fetch]
  prune = true
[rebase]
  autosquash = true
[format]
  pretty = %C(yellow)%h%C(reset) %C(green)%ar%C(reset) %C(bold blue)%an%C(reset) %C(red)%d%C(reset) %s%C(reset)
[alias]
  a = add
  aa = add --all
  ap = add --patch
  br = branch
  bra = branch --all --verbose
  brd = branch --delete
  c = commit
  ca = commit --amend
  car = commit --amend --no-edit
  cm = commit -m
  co = checkout
  d = diff --color-words
  ds = diff --color-words --cached
  glog = log -E -i --grep
  h = stash
  ha = stash --include-untracked
  hl = stash list
  hp = stash pop
  i = init
  l = log -30
  la = log --graph --all -30
  lal = log --graph --all
  ll = log
  pf = push --force-with-lease
  pl = pull
  ps = push
  r = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase --interactive
  rs = rebase --skip
  s = status --short --branch
  slog = log -G
  uncommit = reset --soft HEAD^
  unstage = reset
