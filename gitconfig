[user]
  name = Alessio Rocco
  email = alessio.rocco.lt@gmail.com
[commit]
  template = ~/.gitmessage
[format]
  pretty = %C(yellow)%h%C(reset) %C(green)%ar%C(reset) %C(bold blue)%an%C(reset) %C(red)%d%C(reset) %s%C(reset)
[alias]
  a = add
  c = commit
  ca = commit --amend
  car = commit --amend --no-edit
  co = checkout
  d = diff --color-words
  glog = log -E -i --grep
  h = stash
  hl = stash list
  hp = stash pop
  i = init
  l = log -30
  la = log --graph --all -30
  lal = log --graph --all
  ll = log
  pf = push --force-with-lease
  pl = pull
  ps = push
  s = status --short --branch
  slog = log -G
